generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String   @id @default(cuid())
  ownerId   String   // Clerk userId
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
